<!-- entry-header-area start -->
<div class="entry-header-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="entry-header">
                    {{#if basket}}
                        <h1 class="entry-title">Корзина</h1>
                    {{else}}
                        <h1 class="entry-title">Ваша корзина пуста</h1>
                        <a href="/#main-shop">Наполнить корзину</a>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
<!-- entry-header-area end -->

{{#if basket}}
    <!-- cart-main-area start -->
    <div class="cart-main-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <form action="#">
                        <div class="table-content table-responsive">
                            <table>
                                <thead>
                                <tr>
                                    <th class="product-thumbnail">Изображение</th>
                                    <th class="product-name">Наименование</th>
                                    <th class="product-price">Цена</th>
                                    <th class="product-quantity">Количество</th>
                                    <th class="product-subtotal">Стоиомсть</th>
                                    <th class="product-remove">Удалить</th>
                                </tr>
                                </thead>
                                <tbody>
                                {{#each basket.products}}
                                    <tr>
                                        <td class="product-thumbnail"><a href="shop/product/{{productId._id}}"><img
                                                src="img/cart.jpg" alt="{{productId.name}}"/></a>
                                        </td>
                                        <td class="product-name"><a
                                                href="/shop/product/{{productId._id}}">{{productId.name}}</a></td>
                                        <td class="product-price"><span class="amount">₽ {{productId.price}}</span></td>
                                        <td class="product-quantity"><input type="number" value="{{count}}"/></td>
                                        <td class="product-subtotal">₽ {{multiply productId.price count}}</td>
                                        <td class="product-remove">
                                            <button class="cart-remove-js btn btn-secondary btn-xs glyphicon glyphicon-remove"
                                                    aria-hidden="true" data-id="{{productId._id}}"></button>
                                        </td>
                                        <!--                                        <td class="product-remove"><a href="#"><i class="fa fa-times"></i></a></td>-->
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
